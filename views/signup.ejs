<!DOCTYPE html>
<html>
<head>
  <title>pond signup</title>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <style type="text/css">
    body {
      background: rgb(5, 56, 208);
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    form {
      margin-top: 20px;
    }
    ol {
      height: 100%;
      overflow: auto;
      flex-grow: 1;
    }
    li.complete {
      text-decoration: line-through;
      opacity: .75;
    }
    li.current {
      list-style-type: 'üê∏ ';
    }
    input,button {
      padding: 5px;
      border-radius: 5px;
      border: none;
    }
  </style>
</head>

<body>
  <form method="post">
    <input type="text" name="name" placeholder="enter name...">
    <button type="submit">add to waiting list</button>
  </form>
  <ol>
  <% people.forEach(person => { %>
    <% if (person.complete) { %>
      <li class="complete"><%= person.name %></li>
    <% } else if (person.current) { %>
      <li class="current"><%= person.name %></li>
    <% } else { %>
      <li><%= person.name %></li>
    <% } %>
  <% }) %>
  </ol>
</body>
<script type="text/javascript">
  const list = document.querySelector('ol');
  setInterval(function () {
    fetch('/api/queue').then(function (res) {
      res.json().then(function (data) {
        list.innerHTML = '';
        data.people.forEach(function (person) {
          let classes = person.complete ? 'complete' : '';
          classes = person.current ? `current ${classes}` : classes;
          list.innerHTML += `<li class="${classes}">${ person.name }</li>`;
        });
      })
    });
  }, 1000);
</script>
</html>
